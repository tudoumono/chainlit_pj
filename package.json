{
  "name": "chainlit-ai-workspace",
  "version": "1.0.0",
  "description": "Chainlit AI Workspace - 統合デスクトップアプリケーション",
  "main": "electron/main.js",
  "homepage": "./",
  "author": "Chainlit AI Workspace Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "electron": "electron . --no-sandbox",
    "dev": "electron . --no-sandbox",
    "start": "npm run dev",
    "build": "electron-builder --win portable zip",
    "build:win": "electron-builder --win portable zip",
    "build:portable": "electron-builder --win portable zip",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "electron-log": "^5.1.7",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.chainlit.ai.workspace",
    "productName": "Chainlit AI Workspace",
    "copyright": "Copyright © 2024 Chainlit AI Workspace Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "renderer/**/*",
      "!*.py",
      "utils/**/*",
      ".env.example",
      "requirements.in",
      "pyproject.toml",
      {
        "from": ".",
        "filter": [
          "package.json",
          "README.md",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!**/*.pyo"
        ]
      }
    ],
    "extraResources": [
      { "from": "python_dist", "to": "python_dist" },
      {
        "from": ".",
        "to": "python-backend",
        "filter": [
          "app.py",
          "electron_api.py",
          "handlers/**/*",
          "utils/**/*",
          ".chainlit/config.toml",
          ".chainlit/personas/**",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!**/*.pyo",
          "requirements.in",
          "pyproject.toml",
          ".env.example"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "python_dist/**",
      "python-backend/**"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Chainlit AI Workspace Team"
    },
    
    "dmg": {
      "title": "${productName} ${version}",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "background": "build/background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "generic",
      "url": "https://releases.example.com/"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "chainlit",
    "ai",
    "workspace",
    "electron",
    "python",
    "openai",
    "vector-store",
    "desktop",
    "chat",
    "assistant"
  ],
  "directories": {
    "doc": "docs"
  }
}
